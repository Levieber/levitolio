{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"useAwait": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn"
			},
			"style": {
				"useConsistentArrayType": "warn",
				"useFilenamingConvention": {
					"level": "warn",
					"options": {
						"filenameCases": [
							"kebab-case"
						]
					}
				}
			}
		}
	}
}
